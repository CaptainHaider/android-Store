<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bilalchips.store_app.clothesMenu"
    android:background="#ffffff">


    <TextView
        android:id="@+id/textViewClothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033" />

    <ImageView
        android:id="@+id/imageView1Clothes"
        android:layout_width="229dp"
        android:layout_height="213dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewClothes"
        tools:ignore="ContentDescription"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btnNextClothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="78dp"
        android:drawableLeft="@drawable/ic_chevron_right_black_24dp"
        android:drawableStart="@drawable/ic_chevron_right_black_24dp"
        android:text="Next"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1Clothes"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buybtnClothes"
        android:layout_width="159dp"
        android:layout_height="54dp"

        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="123dp"

        android:background="@android:color/holo_green_light"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"

        android:fontFamily="sans-serif"


        android:paddingLeft="40dp"
        android:text="Buy"
        android:textAlignment="textStart"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1Clothes"
        app:layout_constraintVertical_bias="0.789"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
        tools:targetApi="jelly_bean" />

    <Spinner
        android:id="@+id/spinnerClothes"
        android:layout_width="114dp"
        android:layout_height="44dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:background="@color/Lightwhite"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1Clothes" />

    <Button
        android:id="@+id/btnBackClothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        android:layout_marginTop="78dp"
        android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
        android:drawableStart="@drawable/ic_chevron_left_black_24dp"
        android:text="Back"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnNextClothes"
        app:layout_constraintTop_toBottomOf="@+id/imageView1Clothes"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/sizelabelClothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="33dp"
        android:text="@string/size"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/spinnerClothes"
        app:layout_constraintTop_toBottomOf="@+id/imageView1Clothes" />

    <TextView
        android:id="@+id/priceLabelClothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="Price:"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/spinnerClothes"
        app:layout_constraintTop_toBottomOf="@+id/imageView1Clothes" />

    <TextView
        android:id="@+id/pricetxtClothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnNextClothes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/priceLabelClothes"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
